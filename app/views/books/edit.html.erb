<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      
    <h1>Editing Book</h1>  
      <% if @book.errors.any? %>
        <div class="custom-alert alert alert-danger">
          <h2><%= "#{@book.errors.count} error prohibited this book from being saved:" %></h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @book, local: true do |f| %>
        <%= render 'users/form_fields', f: f %>
        <%= f.submit "Update Book", class: "btn btn-success mb-3" %>
      <% end %>

      <%= link_to 'Show', @book %> |
      <%= link_to 'Back', books_path, class: "back" %>
    </div>
  </div>
</div>
