<div class="container">
  <div class="row">
  
    <div class="col-md-3">
      <%= render 'users/info', user: current_user %>
      <%= render 'users/form', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
        <table class="table table-hover table-inverse">
          <tbody>
            <% if @books.present? %>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <% if book.user.profile_image.attached? %>
                    <%= image_tag book.user.profile_image, size: "50x50" %>
                  <% else %>
                    No Image
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.title %> </td>
                <% if current_user == book.user %>
                <td><%= link_to 'Edit', edit_book_path(@book), id: "edit_link_#{@book.id}", class: 'btn btn-success' %></td>
                <td><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %> </td>
                <% end %>
              </tr>
             <% end %>
             <% end %>
          </tbody>
        </table>
    </div>

  </div>
</div>
