<div class="container col-md-8 px-5 px-sm-0"> <!-- 修正 -->
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'users/info', user: current_user %>
      <%= render 'users/form', book: @book %>
    </div>
    <div class='col-md-8'>
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if book.user.profile_image.attached? %>
                  <%= image_tag book.user.profile_image.variant(resize: "50x50"), style: "width: 50px; height: 50px;" %>
                <% else %>
                  <%= image_tag "default-image.jpg", size: "50x50" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
