<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/info', user: current_user %>
      <%= render 'users/form', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% if @books.present? %>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user.id) do %>
                  <% if book.user&.profile_image.attached? %>
                    <%= image_tag book.user.profile_image, size: "50x50" %>
                  <% else %>
                    <%= image_tag "default-image.webp", size: "50x50" %> <!-- デフォルト画像 -->
                  <% end %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td> <!-- book_path を使う -->
                <td><%= book.body %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
    
  </div>
</div>
