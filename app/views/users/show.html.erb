<div class='container px-5 px-sm-0'>
	<div class='row'>
	  <div class='col-md-3'>
	    <h2>User info</h2>
	    <table class='table'>
	      <tr>
	        <%= image_tag 'current_user.profile_image' %> 
	      </tr>
	      <tr>
	        <th>name</th>
	        <th><%= current_user.name %></th>
	      </tr>
	      <tr>
	        <th>introduction</th>
	        <th><%= current_user.introduction %></th>  <!-- 固定値になっているので変数を使いましょう -->
	      </tr>
	    </table>
	    <div class='row'>
        <%= link_to "Edit Profile", edit_user_path(current_user), class: "btn btn-primary" %>
      </div>
      <h2 class="mt-3">New book</h2>
	    <%= form_with(model: @book, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :opinion, "Opinion" %>
          <%= f.text_area :opinion, class: "form-control" %>
        </div>
        <%= f.submit "Create Book", class: "btn btn-primary" %>
      <% end %>      
	  </div>
	  <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.user.name %></td>
          <td><%= book.title %></td>
          <td><%= book.opinion %></td>
          <td><%= link_to "Edit", edit_book_path(book), class: "btn btn-warning" %></td>
          <td><%= link_to "Delete", book_path(book), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th></th>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody></tbody>
	    </table>
	  </div>
	</div>
</div>