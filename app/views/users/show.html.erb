<div class="container px-5 px-sm-0">
  <div class="row">
    <!-- 左側のカラム：フォームエリア -->
    <div class="col-md-3">
      
      <% if @book.errors.any? %>
        <div class="alert alert-danger">
          <h2><%= "#{@book.errors.count} error(s) prohibited this book from being saved:" %></h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= render 'info', user: current_user %>

      <div class="mt-3">
        <%= render 'form', book: @book %>
      </div>
    </div>

    <div class="col-md-8">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if book.user.profile_image.attached? %>
                  <%= image_tag book.user.profile_image.variant(resize: "50x50") %>
                <% else %>
                  <%= image_tag "default-image.jpg", size: "50x50" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
