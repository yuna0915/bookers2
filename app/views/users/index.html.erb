<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
    <%= render 'layouts/errors', book: @book %>
    <%= render 'info', user: current_user %>

      <div class="mt-3">
        <%= render 'form', book: @book %>
      </div>
    </div>

    <div class="col-md-8">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %> 
          <tr>
            <td>
              <% if user.profile_image.attached? %> 
                <%= image_tag user.profile_image.variant(resize: "50x50") %>
              <% else %>
                <%= image_tag "default-image.webp", size: "50x50" %>
              <% end %>
            </td>
            <td><%= user.name %></td> 
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        <% end %>
         
        </tbody>
      </table>
    </div>
  </div>
</div>
