<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'info', user: current_user %>
      <%= render 'form', book: @book %>
    </div>

    <div class="col-md-9">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th><strong>Title</strong></th>
            <th><strong>Opinion</strong></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if book.user&.profile_image.attached? %>
                  <%= image_tag book.user.profile_image.variant(resize: "50x50") %>
                <% else %>
                  <%= image_tag "default-image.jpg", size: "50x50" %>
                <% end %>
              </td>
              <td><%= link_to book.user.name, user_path(book.user) %></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %> 
        </tbody>
      </table>
    </div>
  </div>
</div>
